{
    "author": "neolao",
    "license": "MIT",
    "name": "recalbox-api",
    "description": "REST API for Recalbox",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/neolao/recalbox-api.git"
    },
    "engines": {
        "node": ">=0.12"
    },
    "main": "./bundle/Api.js",
    "dependencies": {
        "pm2"               : "0.14.*",
        "solfegejs"         : "1.4.*",
        "solfegejs-cli"     : "1.4.*",
        "solfegejs-server"  : "1.5.*"
    },
    "devDependencies": {
        "babel"         : "5.6.*"
    },
    "scripts"       :
    {
        "start"         : "pm2 startOrReload ./scripts/pm2-process-production.json",
        "start-dev"     : "pm2 startOrReload ./scripts/pm2-process-development.json",
        "stop"          : "pm2 stop api",
        "monitoring"    : "pm2 monit api",
        "logs"          : "pm2 logs api",
        "console"       : "node --harmony --harmony-proxies ./bundle/console.js",
        "es6-watch"     : "babel bundle-es6 --blacklist regenerator --watch --out-dir bundle",
        "es6-compile"   : "babel bundle-es6 --blacklist regenerator --out-dir bundle"
    }

}
